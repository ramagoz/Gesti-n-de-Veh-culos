<div class="container-fluid mb-5" style="width:90%">
    
    <div class="row justify-content-center my-4 pt-4">
        <h2>Informes</h2>
    </div>

    <div class="row justify-content-center align-items-center minh-100">
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-4 col-xl-4">
            <div class="card border-primary shadow-lg p-4">
                <form action="/generar-informe/" method="POST" target="_blank">
                
                    {{!-- Seccion desde --}}
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label form-control-lg" for="desde">Desde: </label>
                        </div>
                        <div id="desde" class="col">
                            <input class="form-control form-control-lg" type="date" name="desde" required>
                        </div>
                    </div>

                    {{!-- Seccion hasta --}}
                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label form-control-lg" for="hasta">Hasta: </label>
                        </div>
                        <div id="hasta" class="col">
                            <input name="hasta" class="form-control form-control-lg" type="date" required>
                        </div>
                    </div>

                    {{!-- Boton --}}
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-success btn-block btn-lg">Generar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br><br><br><br><br><br>
</div>
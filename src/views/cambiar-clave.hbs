

<div class="container">
  <div class="row justify-content-center align-items-center minh-100">
    <div class="col-md-4 mx-auto">
        {{#if msjError}}
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{msjError.msj}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {{/if}}
        {{#if msjOk}}
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{msjOk.msj}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {{/if}}
        <div class="card text-center">
            <div class="card-header">
                <h4>Cambiar Contrase単a</h4>
            </div>
            <div class="card-body">
                <form action="/cambiar-clave" method="POST">
                <div class="form-group">
                    <input type="password" name="passwordActual" placeholder="Contrase単a actual" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="passwordNuevo" placeholder="Nueva contrase単a" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="passwordConfirmar" placeholder="Confirmar nueva contrase単a" class="form-control" required>
                </div>
                <button class="btn btn-primary btn-block">
                    Cambiar
                </button>
                </form>
            </div>
        </div>
    </div>
  </div>
</div>


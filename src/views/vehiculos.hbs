<link rel="stylesheet" href="/css/dataTables.bootstrap4.min.css">

<div class="container-fluid mb-4" style="width:90%">
    
    <div class="mx-auto mt-2" style="width: 200px;">
        <h1>Vehículos</h1>
    </div>

    {{#if msj}}
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{msj.msj}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}

    {{#if check}}
        <div class="form-check my-3">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" onchange="soloVendidos(this)" checked>
            <label class="form-check-label" for="exampleCheck1">Mostrar solo vendidos</label>
        </div>
    {{else }}
        <div class="form-check my-3">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" onchange="soloVendidos(this)">
            <label class="form-check-label" for="exampleCheck1">Mostrar solo vendidos</label>
        </div>
    {{/if }}

    <table class="table table-striped table-bordered hover" id="myTable">
        <thead>
            <tr>
                <th scope="col">Chasis</th>
                <th scope="col">Chapa</th>
                <th scope="col">Cliente</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acción</th>
            </tr>
        </thead>

        <tbody >
            {{#each vehiculos.recordset }}
                <tr>
                    <td>{{ chasis }}</td>
                    <td>{{ chapa }}</td>
                    <td>{{ cliente }}</td>
                    <td>{{ descripcion }}</td>
                    <td align="center">
                        <a href="/ver-datos-vehiculo/{{ id }}" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver datos vehículo"> <i class="fa fa-truck fa-2x px-2" aria-hidden="true"></i> </a>
                        <a href="/actualizar-datos-vehiculo/{{ id }}"  data-bs-toggle="tooltip" data-bs-placement="top" title="Actualizar datos vehículo"> <i class="fa fa-refresh fa-2x px-2" aria-hidden="true"></i> </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script src="/js/jquery.dataTables.min.js"></script>
<script src="/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function() {
        $('#myTable').DataTable({
            language:{
                url: "https://cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
            }
        });
    } );
</script>

<script>
    function soloVendidos(check){

        console.log(check.checked);
        if(check.checked){
            window.location='/vehiculos-vendidos';
            return false;
        }else{
            window.location='/vehiculos';
        }
    }
</script>
